rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profile photos
    match /profile-photos/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Venue photos
    match /venue-photos/{venueId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Blog images
    match /blog-images/{blogId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}