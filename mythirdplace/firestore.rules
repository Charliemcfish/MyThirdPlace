rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles with enhanced social features
    match /users/{userId} {
      // Users can read and write their own profile
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // All authenticated users can read public profile data for social features
      allow read: if request.auth != null;
    }
    
    // Venues are readable by all authenticated users
    match /venues/{venueId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == resource.data.createdBy;
    }
    
    // Blogs are readable by all authenticated users
    match /blogs/{blogId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == resource.data.authorUID;
    }
    
    // User-venue relationships for social features
    match /userVenueRelationships/{relationshipId} {
      allow read: if request.auth != null;

      // Users can only create their own relationships
      allow create: if request.auth != null &&
                   request.auth.uid == request.resource.data.userUID &&
                   request.resource.data.relationshipType == 'regular' &&
                   request.resource.data.isActive == true;

      // Users can only update their own relationships
      allow update: if request.auth != null &&
                   request.auth.uid == resource.data.userUID &&
                   request.auth.uid == request.resource.data.userUID;

      // Users can only delete their own relationships
      allow delete: if request.auth != null &&
                   request.auth.uid == resource.data.userUID;
    }
    
    // Tags and categories are readable by all
    match /tags/{tagId} {
      allow read: if request.auth != null;
    }
    
    match /categories/{categoryId} {
      allow read: if request.auth != null;
    }

    // Events collection for venue community events
    match /events/{eventId} {
      // Anyone authenticated can read active events
      allow read: if request.auth != null && resource.data.isActive == true;

      // Helper function to check if user can manage venue
      function canManageVenue(venueId) {
        let venue = get(/databases/$(database)/documents/venues/$(venueId)).data;
        return venue.createdBy == request.auth.uid || venue.verifiedOwner == request.auth.uid;
      }

      // Only venue owners can create events for their venues
      allow create: if request.auth != null &&
                     request.resource.data.createdBy == request.auth.uid &&
                     canManageVenue(request.resource.data.venueId) &&
                     request.resource.data.isActive == true;

      // Only the event creator can update their events
      allow update: if request.auth != null &&
                     resource.data.createdBy == request.auth.uid &&
                     request.resource.data.createdBy == request.auth.uid;

      // Only the event creator can delete (soft delete) their events
      allow delete: if request.auth != null &&
                     resource.data.createdBy == request.auth.uid;
    }
  }
}